@{
    ViewBag.Title = "SearchResult";
}

<h2 style="text-align:center;">SearchResult for "@ViewBag.q"</h2>

<script>
    $('document').ready($(function () {
        $.ajax({
            method: "GET",
            url: "/Home/AjaxSearch",
            data: {
                q: '@ViewBag.q',
                sort: '@ViewBag.sort',
            },
            error: function () { alert('error'); }
        }).done(function (html) {
            $('#ajaxcontent').html(html);
            $('#loading-image').hide();
        });
    }));
</script>

<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true" style="margin:20px">
    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingOne">
            <h4 class="panel-title">
                <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Search options
                </a>
            </h4>
        </div>
        <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
            <div class="panel-body">
                <div>Sort by name</div>
                <div style="float:right;">
                    <span id="sort" onclick="$(function(){$('#sort').attr('style', 'color:red;')});" class="glyphicon glyphicon-sort-by-order" aria-hidden="true"></span>
                    <span class="glyphicon glyphicon-sort-by-order-alt" aria-hidden="true"></span>
                </div>
                <br />

                <div>Sort by shop name</div>
                <div style="float:right;">
                    <span onclick="$(function(){alert()});" class="glyphicon glyphicon-sort-by-alphabet" aria-hidden="true"></span>
                    <span class="glyphicon glyphicon-sort-by-alphabet-alt" aria-hidden="true"></span>
                </div>
                <br />
                <form method="get" action="/Home/Search">
                    <input type="hidden" value="@ViewBag.q" name="q" />
                    <input type="hidden" value="name" name="sort" />
                    <input style="margin-top:5px;" type="submit" class="btn btn-success" value="Go!" />
                </form>
            </div>
        </div>
    </div>
</div>

<div id="loading-image"><img style="display: block;margin: 0 auto;" src="~/Images/ajax-loader.gif" /></div>

<div id="ajaxcontent">
</div>